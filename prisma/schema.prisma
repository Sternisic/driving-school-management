datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Student {
  id           Int       @id @default(autoincrement())
  firstName    String
  lastName     String
  phone        String
  email        String
  gearType     String
  address      String
  lessons      Int
  specialTrips Json
  // Rückbeziehung zur Buchung
  bookings     Booking[] // Ein Student kann mehrere Buchungen haben
}

model Instructor {
  id        Int       @id @default(autoincrement())
  firstName String
  lastName  String
  phone     String
  // Rückbeziehung zur Buchung
  bookings  Booking[] // Ein Instructor kann mehrere Buchungen haben
}

model Car {
  id           Int       @id @default(autoincrement())
  brand        String
  model        String
  licensePlate String
  gearType     String  // Schaltgetriebe oder Automatik
  // Rückbeziehung zur Buchung
  bookings     Booking[] // Ein Auto kann mehrere Buchungen haben
}

model Booking {
  id           Int         @id @default(autoincrement())
  start        DateTime
  end          DateTime
  student      Student     @relation(fields: [studentId], references: [id])
  studentId    Int
  instructor   Instructor  @relation(fields: [instructorId], references: [id])
  instructorId Int
  car          Car         @relation(fields: [carId], references: [id])
  carId        Int
}


enum SpecialTrips {
  LANDSTRASSE
  AUTOBAHN
  DAEMMERUNG
}
