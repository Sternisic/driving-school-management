datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum SpecialTrips {
  LANDSTRASSE
  AUTOBAHN
  DAEMMERUNG
}

enum LessonType {
  NORMAL
  LANDSTRASSE
  AUTOBAHN
  DAEMMERUNG
}

model Student {
  id              Int       @id @default(autoincrement())
  firstName       String
  lastName        String
  phone           String
  email           String
  gearType        String
  address         String
  postalCode      String?   // Vorübergehend optional
  birthDate       DateTime? // Vorübergehend optional
  birthPlace      String?   // Vorübergehend optional
  nationality     String?   // Vorübergehend optional
  occupation      String?   // Vorübergehend optional
  lessons         Int       @default(0)  // Anzahl der normalen Fahrstunden
  specialTrips    Json      @default("{}")  // Spezielle Fahrten (Landstraße, Autobahn, Dämmerung)
  bookings        Booking[] // Ein Student kann mehrere Buchungen haben
}


model Instructor {
  id        Int       @id @default(autoincrement())
  firstName String
  lastName  String
  phone     String
  // Rückbeziehung zur Buchung
  bookings  Booking[] // Ein Instructor kann mehrere Buchungen haben
}

model Car {
  id           Int       @id @default(autoincrement())
  brand        String
  model        String
  licensePlate String
  gearType     String  // Schaltgetriebe oder Automatik
  // Rückbeziehung zur Buchung
  bookings     Booking[] // Ein Auto kann mehrere Buchungen haben
}

model Booking {
  id           Int         @id @default(autoincrement())
  start        DateTime
  end          DateTime
  student      Student     @relation(fields: [studentId], references: [id])
  studentId    Int
  instructor   Instructor  @relation(fields: [instructorId], references: [id])
  instructorId Int
  car          Car         @relation(fields: [carId], references: [id])
  carId        Int
  description  String?     // Optionales Feld für eine Beschreibung oder Notiz
  lessonType   LessonType  // Art der Fahrstunde (Normal oder spezielle Fahrt)
  paid         Boolean     @default(false) // Neues Feld für den Bezahlstatus
}