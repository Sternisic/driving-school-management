datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String @id @default(cuid())
  username String @unique
  password String
}


enum SpecialTrips {
  LANDSTRASSE
  AUTOBAHN
  DAEMMERUNG
}

enum LessonType {
  NORMAL
  LANDSTRASSE
  AUTOBAHN
  DAEMMERUNG
}

model Student {
  id           Int          @id @default(autoincrement())
  firstName    String
  lastName     String
  phone        String
  email        String
  gearType     String
  address      String
  postalCode   String?
  birthDate    DateTime?
  birthPlace   String?
  nationality  String?
  occupation   String?
  lessons      Int          @default(0)
  specialTrips Json         @default("{}")
  bookings     Booking[]
  attendances  Attendance[] // R端ckbeziehung zur Attendance-Tabelle
}

model Instructor {
  id        Int       @id @default(autoincrement())
  firstName String
  lastName  String
  phone     String
  bookings  Booking[] // R端ckbeziehung zur Buchung
}

model Car {
  id           Int       @id @default(autoincrement())
  brand        String
  model        String
  licensePlate String
  gearType     String
  bookings     Booking[] // R端ckbeziehung zur Buchung
}

model Booking {
  id           Int        @id @default(autoincrement())
  start        DateTime
  end          DateTime
  student      Student    @relation(fields: [studentId], references: [id])
  studentId    Int
  instructor   Instructor @relation(fields: [instructorId], references: [id])
  instructorId Int
  car          Car        @relation(fields: [carId], references: [id])
  carId        Int
  description  String?
  lessonType   LessonType
  paid         Boolean    @default(false)
}

model Attendance {
  id         Int      @id @default(autoincrement())
  sessionId  Int
  studentId  Int
  attendedAt DateTime @default(now())
  student    Student  @relation(fields: [studentId], references: [id])

  @@unique([sessionId, studentId]) // Ein Sch端ler kann nur einmal pro Session eingecheckt sein
}
